{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "TvShowsUrl": "https://api.tvmaze.com/",
  "TooManyRequestTimeout": 20,
  "TooManyRequestRetries": 2,
  "TvShowScrapeLimit": 25,
  "StaleTvShowUpdateFrequency": "day",
  "ConnectionStrings": {
    "TvShowDbContext": "Server=(localdb)\\mssqllocaldb;Database=TvShowContext-0e9;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
